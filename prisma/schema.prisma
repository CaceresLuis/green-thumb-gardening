// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  plants Plant[]
}

model Plant {
  id String @id @default(uuid())
  name String
  description String
  imageUrl String
  plantsTips String[]
  
  userid String
  user User @relation(fields: [userid], references: [id], onDelete: Cascade)
}